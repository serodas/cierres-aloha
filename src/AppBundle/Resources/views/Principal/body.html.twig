        <section class="content">
            {% block content %}
                {% if is_granted('ROLE_ADMIN') %}
                    Felicitaciones !! {{app.user.nombre}} eres Administrador
                {% endif %}    
            {% endblock %}
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

    <!-- Main Footer -->
    <footer class="main-footer">
        <!-- To the right -->
        <div class="pull-right hidden-xs">

        </div>
